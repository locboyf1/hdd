@model Company.Areas.Admin.Models.NhaXB
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa nhà xuất bản</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Edit">
            <div class="form-row">

                <input type="text" class="form-control" asp-for="MaNXB" type="hidden">

                <div class="form-group col-md-6 mb-3">
                    <label>Tên nhà xuất bản</label>
                    <input type="text" class="form-control" asp-for="TenNXB" placeholder="Nhập tên nhà xuất bản...">
                
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="Diachi"
                            placeholder="Enter the link...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email"
                            placeholder="Enter the link...">
                </div>

            </div>

            <div class="form-group col-md-6 mb-3">
                    <label>SĐT</label>
                    <input type="number" class="form-control" asp-for="SDT" placeholder="Nhập sđt...">
                    
                </div>

            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>