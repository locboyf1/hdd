@model Company.Areas.Admin.Models.Docgia
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm độc giả</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>Tên độc giả</label>
                    <input type="text" class="form-control" asp-for="Hoten" placeholder="Nhập tên độc giả...">
                    <span asp-validation-for="Hoten" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày sinh</label>
                    <input type="date" class="form-control" asp-for="Ngaysinh"
                            placeholder="Enter the link...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Giới tính</label>
                    <input type="text" class="form-control" asp-for="Gioitinh"
                            placeholder="Enter the link...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Số điện thoại</label>
                    <input type="number" class="form-control" asp-for="SDT"
                            placeholder="Enter the link...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email"
                            placeholder="Enter the link...">
                </div>

            </div>

            <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="Diachi" placeholder="Nhập địa chỉ...">
                    <span asp-validation-for="Diachi" class="alert-danger"></span>
                </div>

            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>