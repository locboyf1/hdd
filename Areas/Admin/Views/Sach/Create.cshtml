@model Company.Areas.Admin.Models.Sach;
@using Company.Areas.Admin.Dto;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm sách</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>Tên sách</label>
                    <input type="text" class="form-control" asp-for="Tensach" placeholder="Nhập tên sách..">
                    <span asp-validation-for="Tensach" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Mã tác giả</label>
                    <div class="">
                        <select asp-for="Matacgia" asp-items="ViewBag.Matacgia" class="px-1 py-2 rounded-2 w-100" id="id" name="Matacgia">
                           <option value="-1">-- Chọn --</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group col-md-3 mb-3">
                    <label>Mã thể loại</label>
                    <div class="">
                        <select asp-for="Matheloai" asp-items="ViewBag.Matheloai" class="px-1 py-2 rounded-2 w-100" id="id" name="Matheloai">
                            <option value="-1">-- Chọn --</option>
                        </select>
                    </div>

                </div>
                <div class="form-group col-md-3 mb-3">
                    <label>Mã nhà xuất bản</label>
                    <div class="">
                        <select asp-for="MaNXB" asp-items="ViewBag.MaNXB" class="px-1 py-2 rounded-2 w-100" id="id" name="MaNXB">
                            <option value="-1">-- Chọn --</option>
                        </select>
                    </div>

                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Năm xuất bản</label>
                    <input type="date" class="form-control" asp-for="Namxuatban" placeholder="Chọn năm xuất bản...">
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Số lượng</label>
                    <input type="text" class="form-control" asp-for="Soluong" placeholder="Nhập số lượng...">
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Gía mượn</label>
                    <input type="text" class="form-control" asp-for="Giamuon" placeholder="Nhập giá mượn...">
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Tình trạng</label>
                    <input type="text" class="form-control" asp-for="Tinhtrang" placeholder="Nhập tình trạng...">
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Tóm tắt</label>
                    <input type="text" class="form-control" asp-for="Tomtat" placeholder="Nhập tóm tắt...">
                </div>

                <div class="form-group col-md-3 mb-3">
                    <label>Ảnh</label>
                    <input type="text" class="form-control" asp-for="Anh" placeholder="Thêm ảnh...">
                </div>

            </div>

            <div class="form-group col-md-3 mb-3">
                <label>IsAcive</label>
                <select name="IsActive">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="IsActive" class="alert-danger"></span>
            </div>

            <a asp-controller="Sach" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thông tin
            </button>
        </form>
    </div>
</main>
