@using Company.Areas.Admin.Models
@model IList<BookView>

  <main class="main">

    <!-- Page Title -->

    <!-- Blog Posts Section -->
    <section id="blog-posts" class="blog-posts section">

      <div class="container">
        <div class="row gy-4" >
            @foreach(var book in Model){
            <div class="col-lg-4">
                <article class="position-relative h-100">

                <div class="post-img position-relative overflow-hidden">
                    <img src=@book.Anh class="img-fluid" style="width: 250px; height: 250px;object-fit: cover;display: block;margin: 0 auto;" width="250px" alt="">
                    <span class="post-date">@book.Namxuatban.ToString("dd/MM")</span>
                </div>

                <div class="post-content d-flex flex-column">

                    <h3 class="post-title">@book.Tensach</h3>

                    <div class="meta d-flex align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person"></i> <span class="ps-2">@book.Tentacgia</span>
                    </div>
                    <span class="px-3 text-black-50">/</span>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-folder2"></i> <span class="ps-2">@book.Tentheloai</span>
                    </div>
                    </div>

                    <p>
                    @book.Tomtat
                    </p>

                    <hr>

                    <a href="/Sach/view/@book.Masach" class="readmore stretched-link"><span>Mượn sách</span><i class="bi bi-arrow-right"></i></a>

                </div>

                </article>
            </div><!-- End post list item -->
            }

        </div>
      </div>

    </section><!-- /Blog Posts Section -->

    <!-- Blog Pagination Section -->
    <section id="blog-pagination" class="blog-pagination section">

      <div class="container">
        <div class="d-flex justify-content-center">
          <ul>
            <li><a href="#"><i class="bi bi-chevron-left"></i></a></li>
            <li><a href="#">1</a></li>
            <li><a href="#" class="active">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li>...</li>
            <li><a href="#">10</a></li>
            <li><a href="#"><i class="bi bi-chevron-right"></i></a></li>
          </ul>
        </div>
      </div>

    </section><!-- /Blog Pagination Section -->

  </main>
